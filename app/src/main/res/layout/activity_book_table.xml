<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F9FA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Top Bar with Back Arrow and Title -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book a Table"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toEndOf="@id/btnBack" />

        <!-- Date Selector -->
        <TextView
            android:id="@+id/tvDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/spinnerDate"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/edittext_rounded_background"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvDateLabel" />

        <!-- Party Size Selector -->
        <TextView
            android:id="@+id/tvPartySizeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Party Size"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerDate"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/spinnerPartySize"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/edittext_rounded_background"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvPartySizeLabel" />

        <!-- Available Time Slots Section -->
        <TextView
            android:id="@+id/tvTimeSlotsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Time Slots"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerPartySize"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTimeSlots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            app:layout_constraintTop_toBottomOf="@id/tvTimeSlotsLabel" />

        <!-- Special Requests -->
        <TextView
            android:id="@+id/tvSpecialRequestsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Special Requests"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/rvTimeSlots"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etSpecialRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:hint="e.g., Window seat, birthday celebration, dietary restrictions..."
            android:background="@drawable/edittext_rounded_background"
            android:padding="16dp"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvSpecialRequestsLabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Optional - Let us know if you have any special requirements"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/etSpecialRequests"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Confirm Booking Button -->
        <Button
            android:id="@+id/btnConfirmBooking"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="CONFIRM BOOKING"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_black_rounded"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toBottomOf="@id/etSpecialRequests"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>