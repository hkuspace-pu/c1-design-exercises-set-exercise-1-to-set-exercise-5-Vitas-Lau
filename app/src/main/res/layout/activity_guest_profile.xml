<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F9FA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Top Bar with Back Arrow and Title -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toEndOf="@id/btnBack" />

        <!-- Profile Photo Section -->
        <ImageView
            android:id="@+id/ivProfilePhoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/placeholder_photo"
            android:background="@drawable/circle_purple_background"
            android:scaleType="centerCrop"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvChangePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Photo"
            android:textSize="14sp"
            android:textColor="#6A1B9A"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/ivProfilePhoto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Personal Information Section -->
        <TextView
            android:id="@+id/tvPersonalInfoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@id/tvChangePhoto"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Full Name -->
        <TextView
            android:id="@+id/tvFullNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvPersonalInfoLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etFullName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="John Doe"
            android:background="@drawable/edittext_rounded_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:inputType="textPersonName"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvFullNameLabel" />

        <!-- Email Address -->
        <TextView
            android:id="@+id/tvEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etFullName"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="guest@example.com"
            android:background="@drawable/edittext_rounded_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvEmailLabel" />

        <!-- Phone Number -->
        <TextView
            android:id="@+id/tvPhoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etEmail"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="+1 234 567 8900"
            android:background="@drawable/edittext_rounded_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:inputType="phone"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvPhoneLabel" />

        <!-- Address -->
        <TextView
            android:id="@+id/tvAddressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etPhone"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:hint="123 Main St, New York, NY 10001"
            android:background="@drawable/edittext_rounded_background"
            android:padding="16dp"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvAddressLabel" />

        <!-- Save Changes Button -->
        <Button
            android:id="@+id/btnSaveChanges"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="SAVE CHANGES"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_purple_rounded"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toBottomOf="@id/etAddress"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Action Buttons Section -->
        <Button
            android:id="@+id/btnNotificationSettings"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="NOTIFICATION SETTINGS"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@drawable/button_white_rounded"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnSaveChanges" />

        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="CHANGE PASSWORD"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@drawable/button_white_rounded"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnNotificationSettings" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="LOGOUT"
            android:textColor="#FF5252"
            android:textStyle="bold"
            android:background="@drawable/button_red_outline_rounded"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnChangePassword" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>