<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F9FA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Top Bar with Back Arrow and Title -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toEndOf="@id/btnBack" />

        <!-- Enable All Toggle -->
        <TextView
            android:id="@+id/tvEnableAllLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable All Notifications"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <Switch
            android:id="@+id/switchEnableAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvEnableAllLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvEnableAllSub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Toggle all notification settings at once"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/switchEnableAll"
            app:layout_constraintBottom_toBottomOf="@id/switchEnableAll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/switchEnableAll" />

        <!-- Guest Notifications Section -->
        <TextView
            android:id="@+id/tvGuestNotificationsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guest Notifications"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@id/switchEnableAll"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Reservation Confirmation Checkbox -->
        <CheckBox
            android:id="@+id/cbReservationConfirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservation Confirmation"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvGuestNotificationsLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvReservationConfirmationSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receive confirmation when you book a table"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/cbReservationConfirmation"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Reservation Reminders Checkbox -->
        <CheckBox
            android:id="@+id/cbReservationReminders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservation Reminders"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvReservationConfirmationSub"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvReservationRemindersSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get reminded about upcoming reservations"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/cbReservationReminders"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Menu Updates Checkbox -->
        <CheckBox
            android:id="@+id/cbMenuUpdates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu Updates"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvReservationRemindersSub"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvMenuUpdatesSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Be notified when new items are added to the menu"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/cbMenuUpdates"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Special Offers & Promotions Checkbox -->
        <CheckBox
            android:id="@+id/cbSpecialOffers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Special Offers &amp; Promotions"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvMenuUpdatesSub"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvSpecialOffersSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receive updates about exclusive deals and events"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/cbSpecialOffers"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Notification Method Section -->
        <TextView
            android:id="@+id/tvNotificationMethodLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification Method"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@id/tvSpecialOffersSub"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvNotificationMethodSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose how you want to receive notifications"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvNotificationMethodLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Push Notifications Toggle -->
        <TextView
            android:id="@+id/tvPushNotifications"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Push Notifications"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvNotificationMethodSub"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/switchPushNotifications" />

        <Switch
            android:id="@+id/switchPushNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tvPushNotifications"
            app:layout_constraintBottom_toBottomOf="@id/tvPushNotifications"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvPushNotificationsSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receive notifications in the app"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvPushNotifications"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Email Toggle -->
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvPushNotificationsSub"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/switchEmail" />

        <Switch
            android:id="@+id/switchEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tvEmail"
            app:layout_constraintBottom_toBottomOf="@id/tvEmail"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvEmailSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get updates via email"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvEmail"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- SMS Toggle -->
        <TextView
            android:id="@+id/tvSMS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SMS"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvEmailSub"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/switchSMS" />

        <Switch
            android:id="@+id/switchSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tvSMS"
            app:layout_constraintBottom_toBottomOf="@id/tvSMS"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvSMSSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receive text messages"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvSMS"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Save Preferences Button -->
        <Button
            android:id="@+id/btnSavePreferences"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="SAVE PREFERENCES"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_purple_rounded"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvSMSSub"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>