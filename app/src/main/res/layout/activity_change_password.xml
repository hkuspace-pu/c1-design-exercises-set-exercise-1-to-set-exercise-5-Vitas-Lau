<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F9FA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Top Bar with Back Arrow and Title -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toEndOf="@id/btnBack" />

        <!-- Subtitle and Icon -->
        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_lock"
            android:tint="#6A1B9A"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Update Your Password"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toEndOf="@id/ivIcon"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter your current password and choose a new secure password"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Current Password Field -->
        <TextView
            android:id="@+id/tvCurrentPasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Password"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@id/tvDescription"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/llCurrentPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@drawable/edittext_rounded_background"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvCurrentPasswordLabel">

            <EditText
                android:id="@+id/etCurrentPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Enter current password"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/btnToggleCurrentPassword"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_visibility_off"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Toggle visibility" />

        </LinearLayout>

        <!-- New Password Field -->
        <TextView
            android:id="@+id/tvNewPasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/llCurrentPassword"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/llNewPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@drawable/edittext_rounded_background"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvNewPasswordLabel">

            <EditText
                android:id="@+id/etNewPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Enter new password"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/btnToggleNewPassword"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_visibility_off"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Toggle visibility" />

        </LinearLayout>

        <!-- Confirm New Password Field -->
        <TextView
            android:id="@+id/tvConfirmPasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm New Password"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/llNewPassword"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/llConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@drawable/edittext_rounded_background"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvConfirmPasswordLabel">

            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Confirm new password"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/btnToggleConfirmPassword"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_visibility_off"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Toggle visibility" />

        </LinearLayout>

        <!-- Password Requirements Section -->
        <TextView
            android:id="@+id/tvRequirementsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password requirements:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/llConfirmPassword"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvRequired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Required:"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvRequirementsLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvAtLeast8Chars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• At least 8 characters"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvRequired"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvAtLeastOneLetter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• At least one letter (A-Z or a-z)"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvAtLeast8Chars"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvAtLeastOneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• At least one number (0-9)"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvAtLeastOneLetter"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvOptional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Optional (for stronger password):"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvAtLeastOneNumber"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvUppercase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Uppercase letter (A-Z)"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvOptional"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvLowercase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Lowercase letter (a-z)"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvUppercase"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvSpecialChar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Special character (!@#$%)"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvLowercase"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Cancel and Change Password Buttons -->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Cancel"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_white_rounded"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@id/tvSpecialChar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnChangePassword" />

        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Change Password"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_purple_rounded"
            app:layout_constraintTop_toTopOf="@id/btnCancel"
            app:layout_constraintStart_toEndOf="@id/btnCancel"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Security Tip Section -->
        <TextView
            android:id="@+id/tvSecurityTipLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security Tip"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/btnCancel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvSecurityTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose a password that you don't use for other websites. Consider using a password manager to generate and store strong passwords."
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvSecurityTipLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>