<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F9FA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Top Bar with Back Arrow and Title -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Reservation"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toEndOf="@id/btnBack" />

        <!-- Guest Information Section -->
        <TextView
            android:id="@+id/tvGuestInfoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guest Information"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Guest Name -->
        <LinearLayout
            android:id="@+id/llGuestName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/edittext_rounded_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvGuestInfoLabel">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person_gray"
                app:tint="#888888" />

            <TextView
                android:id="@+id/tvGuestName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="John Smith"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Phone Number -->
        <LinearLayout
            android:id="@+id/llPhone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/edittext_rounded_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/llGuestName">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_call_gray"
                app:tint="#888888" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+1 (555) 123-4567"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Reservation Details Section -->
        <TextView
            android:id="@+id/tvReservationDetailsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservation Details"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/llPhone"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Date Dropdown -->
        <TextView
            android:id="@+id/tvDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvReservationDetailsLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/spinnerDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_rounded_background"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvDateLabel" />

        <!-- Time Dropdown -->
        <TextView
            android:id="@+id/tvTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerDate"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/spinnerTime"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_rounded_background"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvTimeLabel" />

        <!-- Party Size Dropdown -->
        <TextView
            android:id="@+id/tvPartySizeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Party Size"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerTime"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/spinnerPartySize"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_rounded_background"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvPartySizeLabel" />

        <!-- Table Assignment Dropdown -->
        <TextView
            android:id="@+id/tvTableAssignmentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Table Assignment"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerPartySize"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/spinnerTableAssignment"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_rounded_background"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvTableAssignmentLabel" />

        <!-- Special Requests -->
        <TextView
            android:id="@+id/tvSpecialRequestsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Special Requests"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerTableAssignment"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etSpecialRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:hint="Enter any special requests or notes..."
            android:background="@drawable/edittext_rounded_background"
            android:padding="16dp"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvSpecialRequestsLabel" />

        <!-- Status Dropdown -->
        <TextView
            android:id="@+id/tvStatusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etSpecialRequests"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/spinnerStatus"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_rounded_background"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvStatusLabel" />

        <!-- Save Changes Button -->
        <Button
            android:id="@+id/btnSaveChanges"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="SAVE CHANGES"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_black_rounded"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerStatus" />

        <!-- Cancel Reservation Button -->
        <Button
            android:id="@+id/btnCancelReservation"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="CANCEL RESERVATION"
            android:textColor="#FF5252"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_red_outline_rounded"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnSaveChanges"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>