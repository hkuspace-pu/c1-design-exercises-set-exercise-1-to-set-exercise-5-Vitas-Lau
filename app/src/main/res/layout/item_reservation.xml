<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Guest Name -->
        <TextView
            android:id="@+id/tvGuestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Smith"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Time and Party Size -->
        <TextView
            android:id="@+id/tvTimeParty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏰ 18:30 ♂ 4 guests"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvGuestName"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Phone Number -->
        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☎ +1 (555) 123-4567"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvTimeParty"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Action Buttons -->
        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:drawableStart="@drawable/ic_edit"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvPhone"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call"
            android:drawableStart="@drawable/ic_call"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="@id/btnEdit"
            app:layout_constraintStart_toEndOf="@id/btnEdit"
            android:layout_marginStart="16dp" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:drawableStart="@drawable/ic_cancel_red"
            android:background="@android:color/transparent"
            android:textColor="#FF5252"
            app:layout_constraintTop_toTopOf="@id/btnEdit"
            app:layout_constraintStart_toEndOf="@id/btnCall"
            android:layout_marginStart="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>